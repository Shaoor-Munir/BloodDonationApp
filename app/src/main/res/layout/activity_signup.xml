<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shaoo.blooddonationapp.SignupActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/appCompatEditText2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/appCompatEditText3"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="1.0" />
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/appCompatEditText3"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:inputType="textPassword"
        android:hint="Password"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="126dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/appCompatEditText4"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:inputType="phone"
        android:hint="Contact Number"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/appCompatEditText2"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/appCompatEditText2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/appCompatEditText2"
        app:layout_constraintHorizontal_bias="0.0" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/appCompatEditText5"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:inputType="textEmailAddress"
        android:hint="Email address"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/appCompatEditText4"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/appCompatEditText4"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/appCompatEditText4"
        app:layout_constraintHorizontal_bias="0.0" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/appCompatEditText6"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="User description"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/appCompatEditText5"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/appCompatEditText5"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/appCompatEditText5"
        app:layout_constraintHorizontal_bias="0.0" />


    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/dateofBirth"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:inputType="date"
        android:hint="dd/mm/yyyy"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/appCompatEditText6"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/appCompatEditText6"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/appCompatEditText6"
        app:layout_constraintHorizontal_bias="0.0" />


    <Spinner
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:entries="@array/android_dropdown_arrays"
        android:id="@+id/spinner"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/dateofBirth"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dateofBirth"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/dateofBirth"
        app:layout_constraintHorizontal_bias="0.0" />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="DONE"
        android:textSize="20sp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:id="@+id/appCompatButton2"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="7dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="39dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
